    SetAndCleanActiveTab('AdminTabs_EnvironmentTab','EnvironmentTab_ProductContent')
    showEntity(currentPath+'/Product.aspx/Edit', 'Environment', 'Product', id, 'ProductAll', '#ProductContent');
