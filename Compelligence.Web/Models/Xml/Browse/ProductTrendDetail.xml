  <from>
    <![CDATA[
    Compelligence.Domain.Entity.Views.ProductTrendDetailView as ProductTrendDetailView
    ]]>
  </from>
  <where>
    <![CDATA[
   ProductTrendDetailView.ClientCompany = '$S{ClientCompany}'
    ]]>
  </where>
  <orderBy>
    <![CDATA[
    ProductTrendDetailView.Name
    ]]>
  </orderBy>
