  </events>    
    <from>
    <![CDATA[
    Compelligence.Domain.Entity.Views.CompetitorIndustryDetailView as CompetitorIndustryDetailView 
    ]]>
  </from>
  <where>
    <![CDATA[
   CompetitorIndustryDetailView.ClientCompany = '$S{ClientCompany}'
    ]]>
  </where>
